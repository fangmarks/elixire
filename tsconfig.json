{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2017",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "paths": {},
    "declaration": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "build", "out", "test", "tmp", "logs"]
}
